- form_for [@postcode, @select_product] do |f|
  = f.error_messages
  %div#product_choice
    = f.radio_button :product, "Solar Electricity"
    = f.label "Solar Electricity"
    %br
    = f.radio_button :product, "Solar Hot Water"
    = f.label "Solar Hot Water"
  %p
    = f.label :product
    %br
    = f.text_field :product, :size=>16
  %p
    = f.label :timeframe
    %br
    = f.text_field :timeframe, :size=>16
  %div.nextdiv
    %button{type => "next", :value => "OK", :id => "select_product_submit", :class => "next"}