- form_for @supplier do |f|
  %div#flash
    = f.error_messages

  %div.supp-l
    %h4
      SUPPLER DETAILS
    %p
      Name:
      &nbsp;&nbsp;
      = f.text_field :name, :size => "33"
    %p
      Contact:
      <br/>
      = f.text_field :first_name, :size => "15"
      = f.text_field :last_name, :size => "15"
    %p
      = f.label :abn
      %br
      = f.text_field :abn, :size => "12"
    %p
      = f.label :phone
      %br
      = f.text_field :phone, :size => "12"
    %p
      = f.label :email
      %br
      = f.text_field :email, :size => "25"
    %p
      = f.label :suburb
      %br
      = f.text_field :suburb, :size => "12"
      = f.select :state, [["QLD","QLD"],["N.S.W","N.S.W."],["N.T.","N.T."],["S.A","S.A."],["TAS", "TAS"],["VIC", "VIC"],["W.A.", "W.A."]]
  %div.supp-r
    %div.supp-controls
      %h4
        SUPPLER CONTROLS
      %p
        = f.label :active
        = f.check_box :active
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        = f.label :credit
        &nbsp;
        = f.text_field :credit, :size => "4"
    %div.supp-spacer
    %div.supp-pcs
      %h4
        POSTCODES
      %p.greentext
        <b>Existing postcodes:</b> uncheck to remove them...
      %p
        - for area in @supplier.supplier_areas
          %span.pc-check
            = area.postcode
            = check_box_tag "supplier[postcodes_change][]", area.id, true
      %p.greentext
        <b>New postcodes</b>: please separate these with a comma.  For example, 4001, 4002, 4003
      %p
        = f.text_area :postcodes_requested, :size => '40x2'

  %div.nextdiv
    = image_submit_tag("/images/btn_next.png", :id=>:next)
