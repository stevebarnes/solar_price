- form_for [@postcode, @site_survey] do |f|
  = f.error_messages
  %h2
    Site Details
  %p
    = f.label :roof_type
    = f.select :roof_type, [["Colorbond","Colorbond"],["tile","tile"],["asbestos","asbestos"],["other","other"]]
  %p
    Your North Facing Roof is important. Please answer the following:
  %div#roofarea-sp
    %h3
      SOLAR POWER
    %p
      %span.option_label
        = f.radio_button :meterage_ok_solar_power, "Solar Electricity"
        = f.label "Solar Electricity"
      %br
      %span.option_label
        = f.radio_button :meterage_ok_solar_power, "Solar Hot Water"
        = f.label "Solar Hot Water"
  %div#roofarea-hw
    %h3
      SOLAR HOT WATER
    %p
      %span.option_label
        = f.radio_button :meterage_ok_solar_hot_water, "Solar Electricity"
        = f.label "Solar Electricity"
      %br
      %span.option_label
        = f.radio_button :meterage_ok_solar_hot_water, "Solar Hot Water"
        = f.label "Solar Hot Water"

  %p
    = f.label :approximate_roof_slope
    %br
    = f.text_field :approximate_roof_slope
  %p
    = f.label :percentage_shade_on_north_facing_roof
    %br
    = f.text_field :percentage_shade_on_north_facing_roof
  %p
    = f.label :house_stories
    %br
    = f.text_field :house_stories
  %p
    = f.label :unique_features
    %br
    = f.text_field :unique_features
  %div.nextdiv
    = image_submit_tag("/images/btn_next.png")
